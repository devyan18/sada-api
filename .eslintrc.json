{
	"parser": "@typescript-eslint/parser",
	"plugins": [
		"@typescript-eslint"
	],
	"extends": [
		"standard"
	],
	"overrides": [
		{
			"files": [
				"*.ts"
			],
			"parserOptions": {
				"project": "./tsconfig.json"
			}
		}
	],
	"rules": {
		"no-unused-vars": [
			"error",
			{
				"varsIgnorePattern": "^[A-Z]",
				"argsIgnorePattern": "^[A-Z]"
			}
		]
	},
	"ignorePatterns": [
		"node_modules/",
		"dist/"
	]
}